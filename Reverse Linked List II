/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *reverseBetween(ListNode *head, int m, int n) {
        ListNode *prev = nullptr;
        ListNode *cur = nullptr;
        ListNode result(-1);
        
        result.next = head;
        prev = &result;
        for (int i=0; i<m-1; i++)
        {
            prev = prev->next;
        }
        ListNode* const head2 = prev;
        prev = head2->next;
        cur = prev->next;
        
        for (int i=m; i<n; i++)
        {
            prev->next = cur->next;
            cur->next = head2->next;
            head2->next = cur;
            cur = prev->next;
        }
        
        return result.next;
    }
};
